{
  "name": "jonathan-ruiz-portfolio",
  "description": "Jonathan Ruiz's professional portfolio and CV website",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "author": "Jonathan Ruiz <contact@jonathanruiz.co.uk>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "deploy": "./deploy.sh",
    "deploy:backend": "./server/deploy.sh"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/vue-fontawesome": "github:fortawesome/vue-fontawesome",
    "@headlessui/vue": "^1.7.17",
    "@heroicons/vue": "^2.1.1",
    "chart.js": "^4.4.1",
    "pinia": "^3.0.3",
    "vue": "^3.3.11",
    "vue-chartjs": "^5.3.0",
    "vue-highlight-words": "^3.0.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.18.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.12",
    "vitest": "^1.0.0",
    "vue-tsc": "^1.8.25"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
